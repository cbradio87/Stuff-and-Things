<%- include("partials/header.ejs") %>

<h3>Items in Cart: <%= itemsInCart %></h3>
<main class="container mt-3">
  <section id="product-container">
    <% for (var i = 0; i < products.length; i++) { %>
      <% if (i % 3 === 0) { %>
        <div class="row mb-3">
      <% } %>
      <div class="col-md-4">
      <%- include("partials/store-item.ejs", {product: products[i]}) %>
      </div>
      <% if (i % 3 === 2) { %>
        </div>
      <% } %>
    <% } %>
  </section>
</main>
<script src="/js/item-modal.js"></script>

<%- include("partials/store-item-modal.ejs") %>
<%- include("partials/footer.ejs") %>